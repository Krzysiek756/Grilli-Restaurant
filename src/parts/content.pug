//Section Hero

.hero 
    .container 
        .row 
            .col-12.col-lg-12
                .hero__content#home 
                    .hero__slider(data-hero-slider="")
                        .hero__slide.active(data-hero-slider-item="")
                        
                            .hero__bg
                            h3.slide__subtitle.slider-reveal Tradational & Hygine
                            h1.slide__title.slider-reveal For the love of delicious food
                            p.slide__p.slider-reveal Come with family & feel the joy of mouthwatering food
                            .btn.btn--hero.slider-reveal 
                                span.text.text-1 View Our Menu  
                                span.text.text-2(aria-hidden='true') View Our Menu  
                        .hero__slide(data-hero-slider-item="")
                            .hero__bg.hero__bg--2
                            h3.slide__subtitle.slider-reveal delightful experience
                            h1.slide__title.slider-reveal Flavors Inspired by the Seasons
                            p.slide__p.slider-reveal Come with family & feel the joy of mouthwatering food
                            .btn.btn--hero.slider-reveal
                                span.text.text-1 View Our Menu  
                                span.text.text-2(aria-hidden='true') View Our Menu   
                        .hero__slide(data-hero-slider-item="")
                            .hero__bg.hero__bg--3
                            h3.slide__subtitle.slider-reveal amazing & delicious
                            h1.slide__title.slider-reveal Where every flavor tells a story
                            p.slide__p.slider-reveal Come with family & feel the joy of mouthwatering food
                            .btn.btn--hero.slider-reveal
                                span.text.text-1 View Our Menu  
                                span.text.text-2(aria-hidden='true') View Our Menu    
            .hero__button 
                        .btn.btn--slider.prev(data-prev-btn="") 
                            i.ri-arrow-left-s-line
                        .btn.btn--slider.next(data-next-btn="")
                            i.ri-arrow-right-s-line
            .hero__image 
                            a(href="#")
                                img(src="./assets/img/hero-icon.png", alt="")
                                span Book a Table    


